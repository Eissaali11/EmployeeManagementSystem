# تكوين بسيط لـ htaccess لحل مشكلة 404
Options +ExecCGI +FollowSymLinks
DirectoryIndex index.php index.html

# تمكين محرك إعادة الكتابة
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # معالجة الطلبات للملفات والمجلدات الموجودة بالفعل
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # توجيه كل الطلبات إلى index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# التعامل مع ملفات Python
AddHandler cgi-script .py
<FilesMatch "\.py$">
    Options +ExecCGI
    SetHandler cgi-script
</FilesMatch>

# تعيين الملفات الافتراضية
DirectoryIndex index.php index.html

# تكوين PHP
<IfModule mod_php.c>
    php_flag display_errors On
    php_flag log_errors On
    php_value error_log /home/u800258840/domains/eissa.site/public_html/php_errors.log
</IfModule>

# إعداد صفحات الخطأ المخصصة
ErrorDocument 403 /static/error/403.html
ErrorDocument 404 /static/error/404.html
ErrorDocument 500 /static/error/500.html

# ضغط الملفات لتسريع التحميل
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

# تعيين التوقيت المحلي للمنطقة العربية
SetEnv TZ Asia/Riyadh

# تمكين التعامل مع UTF-8 للدعم العربي
AddDefaultCharset UTF-8

# تحديد أذونات الوصول - مهم جدًا لتجنب خطأ 403
<Directory />
    Options FollowSymLinks
    AllowOverride All
    Require all granted
</Directory>

# السماح بالوصول إلى المجلد الرئيسي
# المسار المحدث لموقعك على Hostinger
<Directory "/home/u800258840/domains/eissa.site/public_html">
    Options Indexes FollowSymLinks ExecCGI
    AllowOverride All
    Require all granted
</Directory>

# تعيين ملف الفهرسة الافتراضي
DirectoryIndex index.php index.html index.htm

# تكوين الكاش للملفات الثابتة
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# تعيين متغيرات بيئية إضافية
SetEnv FLASK_APP main.py
SetEnv FLASK_ENV production