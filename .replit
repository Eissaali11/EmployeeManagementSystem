packages = ["cacert", "cairo", "fontconfig", "freefont_ttf", "freetype", "gdk-pixbuf", "ghostscript", "glib", "glibcLocales", "harfbuzz", "lcms2", "libaom", "libde265", "libffi", "libheif", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "nasm", "openjpeg", "pango", "pkg-config", "tcl", "tk", "x265", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000",   "--timeout", "600",
 "main:app"]

[workflows]
