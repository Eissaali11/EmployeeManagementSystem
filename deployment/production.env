# ملف متغيرات البيئة للإنتاج
# يجب تخصيص هذه القيم حسب بيانات الخادم الفعلية

# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://nuzum_user:secure_password@localhost:5432/nuzum_production
PGHOST=localhost
PGPORT=5432
PGDATABASE=nuzum_production
PGUSER=nuzum_user
PGPASSWORD=secure_password

# إعدادات Flask
FLASK_ENV=production
SESSION_SECRET=your-very-secure-session-secret-key-here-change-this
DEBUG=False

# إعدادات Firebase (يجب الحصول عليها من Firebase Console)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_APP_ID=your-firebase-app-id

# إعدادات Twilio (اختيارية للرسائل النصية)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# إعدادات SendGrid (اختيارية للبريد الإلكتروني)
SENDGRID_API_KEY=your-sendgrid-api-key

# إعدادات الأمان
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# إعدادات رفع الملفات
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=/app/uploads