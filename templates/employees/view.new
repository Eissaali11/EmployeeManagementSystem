                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">الأقسام المرتبط بها الموظف</label>
                            <div class="department-pills-container">
                                {% if departments %}
                                    {% set assigned_dept_ids = employee.departments|map(attribute='id')|list %}
                                    
                                    {% for dept in departments %}
