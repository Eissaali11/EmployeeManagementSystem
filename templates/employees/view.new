                                <span class="badge-enhanced bg-success">نشط</span>
                                {% elif employee.status == 'inactive' %}
                                <span class="badge-enhanced bg-danger">غير نشط</span>
                                {% elif employee.status == 'on_leave' %}
                                <span class="badge-enhanced bg-warning">في إجازة</span>
                                {% else %}
                                <span class="badge-enhanced bg-secondary">{{ employee.status }}</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">المدير</p>
                            <p class="fs-5">
                                {% if employee.department and employee.department.manager %}
                                {{ employee.department.manager.name }}
                                {% else %}
                                -
